<p>Start time <%= @service.start_time %></p>
<p>Finish time <%= @service.finish_time %></p>

<p>day <%= @service.day_of_week %></p>
<p>Location <%= @service.location %></p>

<%= form_for @ride, action: :create do |f| %>

    <%= f.label :date %>
    <%= f.text_field :date %>

    <%= f.label :leave_time %>
    <%= f.text_field :leave_time %>
  
    <%= f.label :return_time %>
    <%= f.text_field :return_time %>

   <%= f.label :number_of_seats %>
    <%= f.text_field :number_of_seats %>

   <%= f.label :seats_available, "Seats available" %>
    <%= f.text_field :seats_available %>


   <%= f.label :meeting_location, "Meeting location" %>
    <%= f.text_field :meeting_location %>

    <%= f.label :vehicle %>
    <%= f.text_field :vehicle %>
<%= hidden_field_tag 'authenticity_token', form_authenticity_token %>
    

<%= f.submit 'Offer ride' %>

<% end %>
